<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Added the entity VehicleDetail.
    -->
    <changeSet id="20250129193850-1" author="ursu">
        <createTable tableName="vehicle_detail">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="color" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="engine_description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="fuel_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="vehicle_vin" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="vehicle_vin"
                                 baseTableName="vehicle_detail"
                                 constraintName="fk_vehicle_detail__vehicle"
                                 referencedColumnNames="vin"
                                 referencedTableName="vehicle"
        />
    </changeSet>

</databaseChangeLog>
